---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import JournalPreview from '../components/JournalPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('journal')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Veille technologique | Bejaoui Haitem"
	description="Veille techologique."
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Veille technologique"
				tagline="Découvrez mes recherches récentes sur les tendances du numérique, de la cybersécurité et des technologies émergentes."
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<JournalPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
